<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.photo.selectlib">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <meta-data
            android:name="design_width_in_dp"
            android:value="375"/>
        <meta-data
            android:name="design_height_in_dp"
            android:value="812"/>

        <activity android:name=".activity.GSYVideoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"/>
        <activity android:name=".BaseActivity"
            android:theme="@style/MyAppTheme"/>
        <activity android:name=".activity.ClipImageActivity"
            android:theme="@style/MyAppTheme"/>
        <activity android:name=".activity.FolderListActivity"
            android:theme="@style/MyAppTheme"/>
        <activity android:name=".activity.ImageSelectActivity"
            android:theme="@style/MyAppTheme" />
        <activity android:name=".activity.PreviewImageActivity"
            android:theme="@style/MyAppTheme"/>
        <activity android:name=".activity.PreviewImageUnityActivity"
            android:theme="@style/MyAppTheme"/>

        <activity android:name=".matisse.ui.MatisseActivity"
            android:theme="@style/MyAppTheme"/>
        <activity android:name=".matisse.internal.ui.AlbumPreviewActivity"
            android:theme="@style/MyAppTheme"/>
        <activity android:name=".matisse.internal.ui.SelectedPreviewActivity"
            android:theme="@style/MyAppTheme"/>
        <activity android:name=".matisse.ui.ImageCropActivity"
            android:theme="@style/MyAppTheme"/>
    </application>

</manifest>